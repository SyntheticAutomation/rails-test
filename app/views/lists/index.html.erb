<h1 class="display-3 main-heading">My Lists</h1>
<%= link_to 'Create a list', new_list_path, class: "btn btn-dark new-list-button" %>

<table class="table">
  <tr>
    <th class='h3'>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @lists.each do |list| %>
  <tr>
    <td><%= link_to "#{list.title}", list, class: "list-title" %></td>
    <td><%= link_to 'Edit this list', edit_list_path(list), class: "list-action" %></td>
    <td><%= link_to 'Delete list', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "list-action" %></td>
  </tr>
<% end %>
</table>

<br />
